<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible">

    <com.clover_studio.spikachatmodule.view.circularview.layout.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/menuMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                style="@style/CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/default_color_light"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/firstRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/cameraBtn"
                                android:layout_width="@dimen/fab_size"
                                app:rippleColor="@android:color/holo_red_dark"
                                android:layout_height="@dimen/fab_size"
                                app:borderWidth="@dimen/float_button_border"
                                android:src="@drawable/ic_camera"
                                app:backgroundTint="@android:color/white"
                                />

                            <com.clover_studio.spikachatmodule.view.CustomTextView
                                android:id="@+id/cameraTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:text="@string/camera"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/menu_text_size"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/galleryBtn"
                                android:layout_width="@dimen/fab_size"
                                android:layout_height="@dimen/fab_size"
                                app:borderWidth="@dimen/float_button_border"
                                app:rippleColor="@android:color/holo_red_dark"
                                android:src="@drawable/ic_gallery"
                                app:backgroundTint="@android:color/white"
                                />

                            <com.clover_studio.spikachatmodule.view.CustomTextView
                                android:id="@+id/galleryTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:text="@string/gallery"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/menu_text_size"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/locationBtn"
                                app:borderWidth="@dimen/float_button_border"
                                android:layout_width="@dimen/fab_size"
                                android:layout_height="@dimen/fab_size"
                                app:rippleColor="@android:color/holo_red_dark"
                                android:src="@drawable/ic_location"
                                app:backgroundTint="@android:color/white"
                                />

                            <com.clover_studio.spikachatmodule.view.CustomTextView
                                android:id="@+id/locationTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:text="@string/location"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/menu_text_size"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/secondRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/firstRow"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/file"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/fileBtn"
                                android:layout_width="@dimen/fab_size"
                                android:layout_height="@dimen/fab_size"
                                app:borderWidth="@dimen/float_button_border"
                                app:rippleColor="@android:color/holo_red_dark"
                                android:src="@drawable/ic_file"
                                app:backgroundTint="@android:color/white"
                                />

                            <com.clover_studio.spikachatmodule.view.CustomTextView
                                android:id="@+id/fileTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:text="@string/file"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/menu_text_size"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/videoBtn"
                                android:layout_width="@dimen/fab_size"
                                app:rippleColor="@android:color/holo_red_dark"
                                android:layout_height="@dimen/fab_size"
                                android:src="@drawable/ic_video"
                                app:borderWidth="@dimen/float_button_border"
                                app:backgroundTint="@android:color/white"
                                />

                            <com.clover_studio.spikachatmodule.view.CustomTextView
                                android:id="@+id/videoTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:text="@string/video"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/menu_text_size"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/audio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/audioBtn"
                                android:layout_width="@dimen/fab_size"
                                android:layout_height="@dimen/fab_size"
                                app:rippleColor="@android:color/holo_red_dark"
                                app:borderWidth="@dimen/float_button_border"
                                android:src="@drawable/ic_audio"
                                app:backgroundTint="@android:color/white"
                                />

                            <com.clover_studio.spikachatmodule.view.CustomTextView
                                android:id="@+id/audioTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:text="@string/audio"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/menu_text_size"/>

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </com.clover_studio.spikachatmodule.view.circularview.layout.RevealFrameLayout>

</RelativeLayout>